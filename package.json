{
  "name": "jm-passport-weapp",
  "version": "1.0.5",
  "description": "passport service for weapp",
  "main": "./lib/index",
  "scripts": {
    "start": "jm-server",
    "cluster": "jm-server --cluster",
    "test": "jest",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "**/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jm-root/jm-passport-weapp.git"
  },
  "keywords": [
    "javascript",
    "jm-passport-weapp"
  ],
  "author": {
    "name": "Jeff YU"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jm-root/jm-passport-weapp/issues"
  },
  "homepage": "https://github.com/jm-root/jm-passport-weapp",
  "dependencies": {
    "jm-dao": "^1.0.5",
    "jm-server": "^1.0.3"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "jest": "^23.1.0",
    "lint-staged": "^8.1.0",
    "standard": "^12.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
